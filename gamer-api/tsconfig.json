{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "sourceMap": true,
        "rootDirs": [
            "src",
            "test"
        ],
        "baseUrl": "src",
        "strictNullChecks": true,
        "paths": {
            "@/test/*": [
                "../test/*"
            ],
            "@/*": [
                "*"
            ]
        }
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": []
}